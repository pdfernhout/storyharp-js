{
    "compilerOptions": {
        "module": "amd",
        "target": "es6",
        "sourceMap": false,
        "outDir": "dist",
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "removeComments": true,
        "preserveConstEnums": true,
    },
    "include": [
        "source/**/*",
        "tests-interactive/**/*",
        "tests/**/*"
    ]
}
